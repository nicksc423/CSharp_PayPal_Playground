@model ECommerceSite.Models.Category
@{
    ViewBag.Title = "Browse Items";
}
<div class="genre">
    <h3><em>@Model.Name</em> Items</h3>
    <ul id="item-list">
        @foreach (var item in Model.Items)
        {
            <li>
                <a href="@Url.Action("Details", new { id = item.ItemId })">
                    <img alt="@item.Name" src="@item.ItemPictureUrl" />
                    <span>@item.Name</span>
                </a>
            </li>
        }
    </ul>
</div>
