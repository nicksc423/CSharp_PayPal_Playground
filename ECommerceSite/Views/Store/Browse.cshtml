@model ECommerceSite.Models.Category
@{
    ViewBag.Title = "Browse Products";
}
<div class="genre">
    <h3><em>@Model.Name</em> Products</h3>
    <ul id="product-list">
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details", new { id = product.ProductId })">
                    <img alt="@product.Name" src="@product.ProductPictureUrl" />
                    <span>@product.Name</span>
                </a>
            </li>
        }
    </ul>
</div>
